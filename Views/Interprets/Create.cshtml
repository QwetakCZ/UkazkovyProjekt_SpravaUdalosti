@model SpravaUdalosti.Models.Interprets

@{
    ViewData["Title"] = "Create";
}

<h1>Vytvořit</h1>

<h4>Nový interpret</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-floating py-2">
                <label asp-for="NameOfInterpret" class="control-label opacity-50">Název interpreta</label>
                <input asp-for="NameOfInterpret" class="form-control" />
                <span asp-validation-for="NameOfInterpret" class="text-danger"></span>
            </div>
            <div class="form-floating py-2">
                <label asp-for="DescriptionOfInterpret" class="control-label opacity-50">Popis interpreta</label>
                <input asp-for="DescriptionOfInterpret" class="form-control" />
                <span asp-validation-for="DescriptionOfInterpret" class="text-danger"></span>
            </div>
            <div class="form-floating py-2">
                <label asp-for="MusicGenre" class="control-label opacity-50">Hudební žánr</label>
                <select asp-for="MusicGenre" class="form-control">
                <option selected disabled>Vyberte hudební žánr</option>
                    @foreach(var item in Enum.GetValues(typeof(SpravaUdalosti.Models.MusicGenre)))
                    {
                        <option value="@item">@item</option>
                    })
                </select>
                <span asp-validation-for="MusicGenre" class="text-danger"></span>
            </div>
            <div class="form-floating py-2">
                <label asp-for="CountryOfOrigin" class="control-label opacity-50">Země původu</label>
                <input asp-for="CountryOfOrigin" class="form-control" />
                <span asp-validation-for="CountryOfOrigin" class="text-danger"></span>
            </div>
            <div class="form-floating py-2">
                <input type="submit" value="Uložit" class="btn btn-primary" />
                <a asp-action="Index" class="btn btn-outline-secondary">Zpátky na výpis interpretů</a>
            </div>
        </form>
    </div>
</div>


