@model SpravaUdalosti.Models.Event

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Event</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-floating py-2">
                <label asp-for="EventName" class="control-label opacity-50">Název akce</label>
                <input asp-for="EventName" class="form-control" />
                <span asp-validation-for="EventName" class="text-danger"></span>
            </div>
            <div class="form-floating py-2">
                <label asp-for="EventDescription" class="control-label opacity-50">Popis akce</label>
                <input type="text" asp-for="EventDescription" class="form-control"></input>
                <span asp-validation-for="EventDescription" class="text-danger"></span>
            </div>
            <div class="form-floating py-2">
                <label asp-for="EventDate" class="control-label opacity-50">Datum</label>
                <input asp-for="EventDate" class="form-control" />
                <span asp-validation-for="EventDate" class="text-danger"></span>
            </div>
            <div class="form-floating py-2">
                <label asp-for="EventPlace" class="control-label opacity-50">Místo konání</label>
                <input asp-for="EventPlace" class="form-control" />
                <span asp-validation-for="EventPlace" class="text-danger"></span>
            </div>
            <div class="form-floating py-2">
                <label asp-for="MaxNumberOfParticipants" class="control-label opacity-50">Max. počet účastníků</label>
                <input asp-for="MaxNumberOfParticipants" class="form-control" />
                <span asp-validation-for="MaxNumberOfParticipants" class="text-danger"></span>
            </div>
            <div class="form-floating py-2">
                <label asp-for="InterpretId" class="control-label opacity-50">Interpret</label>
                <select asp-for="InterpretId" class="form-control" asp-items="ViewBag.InterpretId"></select>
                <span asp-validation-for="InterpretId" class="text-danger"></span>
            </div>
            <div class="form-floating py-2">
                <input type="submit" value="Uložit" class="btn btn-primary" />
                <a asp-action="Index" class="btn btn-outline-secondary">Zpátky na seznam akcí</a>
            </div>
            <input asp-for="WillParticipate" type="hidden"/>
        </form>
    </div>
</div>

<div>
    
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
