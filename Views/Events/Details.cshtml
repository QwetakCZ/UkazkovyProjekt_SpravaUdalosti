@model SpravaUdalosti.Models.Event

@{
    ViewData["Title"] = "Details";
}

<h1>Detail akce</h1>

<div>
    <h4>@Model.NazevUdálosti</h4>
    <hr />
    <dl class="row">
        
        <dt class = "col-sm-2">
            Popis akce
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.PopisUdalosti)
        </dd>
        <dt class = "col-sm-2">
            Datum
        </dt>
        <dd class = "col-sm-10">
            @Model.DatumUdalosti.ToShortDateString() - 
            @Model.DatumUdalosti.ToShortTimeString()
        </dd>
        <dt class = "col-sm-2">
            Místo konání
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.MistoKonani)
        </dd>
        <dt class = "col-sm-2">
            Maximální počet účastníků
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.MaxPocetUcastniku)
        </dd>
        <dt class = "col-sm-2">
            Interpret
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Interpret.NazevInterpreta)
        </dd>
    </dl>
</div>
<div>
    @if(User.IsInRole(Role.RoleAdmin))
    {
        <a asp-action="Edit" asp-route-id="@Model?.Id" class="btn btn-primary">Editace</a>
    }
    
    <a asp-action="Index" class="btn btn-outline-secondary">Zpátky na výpis akcí</a>
</div>
