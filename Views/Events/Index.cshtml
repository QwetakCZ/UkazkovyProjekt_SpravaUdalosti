@model IEnumerable<SpravaUdalosti.Models.Event>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.NazevUdálosti)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PopisUdalosti)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DatumUdalosti)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.MistoKonani)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.MaxPocetUcastniku)
