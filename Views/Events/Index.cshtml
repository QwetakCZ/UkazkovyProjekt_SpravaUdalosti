            <th>
                @Html.DisplayNameFor(model => model.Interpret)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.NazevUdálosti)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PopisUdalosti)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DatumUdalosti)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.MistoKonani)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.MaxPocetUcastniku)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Interpret.NazevInterpreta)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
