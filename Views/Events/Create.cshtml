@model SpravaUdalosti.Models.Event

@{
    ViewData["Title"] = "Create";
}

<h1>Vytvořit</h1>

<h4>Nová událost</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-floating py-2">
                <label asp-for="EventName" class="control-label">Název akce</label>
                <input asp-for="EventName" class="form-control" />
                <span asp-validation-for="EventName" class="text-danger"></span>
            </div>
            <div class="form-floating py-2">
                <label asp-for="EventDescription" class="control-label">Popis události</label>
                <input asp-for="EventDescription" class="form-control" />
                <span asp-validation-for="EventDescription" class="text-danger"></span>
            </div>
            <div class="form-floating py-2">
                <label asp-for="EventDate" class="control-label">Datum</label>
                <input asp-for="EventDate" class="form-control" />
                <span asp-validation-for="EventDate" class="text-danger"></span>
            </div>
            <div class="form-floating py-2">
                <label asp-for="EventPlace" class="control-label">Místo konání</label>
                <input asp-for="EventPlace" class="form-control" />
                <span asp-validation-for="EventPlace" class="text-danger"></span>
            </div>
            <div class="form-floating py-2">
                <label asp-for="MaxNumberOfParticipants" class="control-label">Maximální počet účastníků</label>
                <input asp-for="MaxNumberOfParticipants" class="form-control" />
                <span asp-validation-for="MaxNumberOfParticipants" class="text-danger"></span>
            </div>
            <div class="form-floating py-2">
                <label asp-for="InterpretId" class="control-label">Interpret</label>
                <select asp-for="InterpretId" class ="form-control" asp-items="ViewBag.InterpretId"></select>
            </div>
            <div class="form-floating py-2">
                <input type="submit" value="Vytvořit" class="btn btn-primary py-2" />
                <a asp-action="Index" class="btn btn-outline-secondary">Zpátky na výpis</a>
            </div>
        </form>
    </div>
</div>

<div>
   
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
